<table border="1" cellpadding="2">
	
	<!-- table headers -->
	<tr>
		<th>Marathon</th>
		<th>Date</th>
		<th>Total Time</th>
		<th>Place</th>
		<th></th>
	</tr>
	
	<% @usermarathons.each do |um| %>
	<% mar = um.marathon %>
	<tr>
		<td><%= link_to mar.name, marathon_path(mar) %></td>
		<td><%= mar.Date %></td>
		<td>
			<%= um.hours%>:
			<% if (um.minutes < 10) %>
			0<%= um.minutes %>
			<% else %>
			<%= um.minutes %>
			<% end %> 
		</td>
		<td><%= um.place %></td>
		<td><%= link_to 'Edit', edit_user_marathon_path(um) %></td>
		
	</tr>	
	<% end %>
		
	
</table>
