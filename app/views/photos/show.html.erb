<p id="notice"><%= notice %></p>

<p>
  <b>My photos:</b>
  
  <%= image_tag @photo.userphoto.url%>
 
</p>



<%= link_to 'Edit', edit_photo_path(@photo) %> 

<%= link_to 'Back', photos_path %>



<h1>comments</h1>

<table>
<% @comments.each do |comment| %>

<% if @photo.id == comment.photo_id %>
<tr>
	<td><h6><%= comment.message %></h6></td>
	<% commentby = User.find(comment.user_id)%>
	<td><i>Commented By: <%= commentby.first_name %></i></td>
</tr>
<%end%>
<%end%>
</table>

<%= link_to 'New Comments', new_comment_path(:photoid => @photo.id) %>
