<%= form_for(@photo, :html => {:multipart => true}) do |f| %>
  <% if @photo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@photo.errors.count, "error") %> prohibited this photo from being saved:</h2>

      <ul>
      <% @photo.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<div id="marathondropdown">
		<%= f.label :marathon_id, 'Please select the marathon the image was taken at:' %>
		<%= f.collection_select :marathon_id, @marathons, :id, :name, :prompt => "Select a Marathon" %>
		
	</div>
  <div class="field">
  	<%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.label :upload %><br />
    <%= f.file_field :userphoto %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
