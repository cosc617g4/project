<%= form_for @message, :url => messages_path, :method => :post do |f| %>

<% @emailfrom = @from.email%>
<table>

	<tr>
		<td> Reply To: </td>
		<td> <%= f.text_field :to, :value => "#@emailfrom" %> </td>
	</tr>

	<tr>
		<td><%= f.label :topic, 'Subject:' %></td>
		<td><%= f.text_field :topic, :value => "#@replysubject" %></td>
	</tr>

	<tr>
		<td><%= f.label :body, 'Message:' %></td>
		<td><%= f.text_area :body, :value => "#@bodyvalue" %></td>
	</tr>

</table>
<%= f.button :submit, class: 'btn' %>

<% end %>