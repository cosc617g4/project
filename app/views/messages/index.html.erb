<table border="2">
	
	<tr>
		<th></th>
		<th></th>
		<th>From</th>
		<th>Subject</th>
	</tr>
	
<% @messages.each do |m| %>

<tr>
	<td> <%= link_to "Delete", message_path(m), :method => :delete %></td>
	<td>Reply</td>
	<% @sender = User.find(m.sent_messageable )%>
	<td><%= @sender.first_name %> <%= @sender.last_name %></td>
	<td><%= m.topic %></td>
</tr>
<% end %>
</table>

